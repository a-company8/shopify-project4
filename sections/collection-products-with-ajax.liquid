<div class="collection-products-section">
  {% assign collection_handle = section.settings.collection %}
  {% assign collection = collections[collection_handle] %}
  
  {% if collection.products.size > 0 %}
    <div class="products-grid">
      {% for product in collection.products limit: section.settings.products_per_row %}
        <div class="product-card" id="{{ product.title | handle }}" data-product-id="{{ product.id }}">
          <a href="{{ product.url }}">
            <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}" >
            <h3>{{ product.title }}</h3>
            <p class="product-price">{{ product.price | money }}</p>
          </a>
          <button class="add-to-cart-btn" data-product-id="{{ product.id }}" onclick="myFunction()" >Add to Cart</button>
          <h2>amin</h2>
        </div>
      {% endfor %}
    </div>
    <button id="load-more-btn" class="load-more">Load More</button>
  {% else %}
    <p>No products found in the selected collection.</p>
  {% endif %}
</div>

{% schema %}
{
  "name": "Collection with AJAX",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Choose a collection"
    },
    {
      "type": "range",
      "id": "products_per_row",
      "label": "Products per row",
      "default": 4,
      "min": 2,
      "max": 6
    }
  ],
  "presets": [
    {
      "name": "Collection with AJAX",
      "category": "Products"
    }
  ]
}
{% endschema %}

